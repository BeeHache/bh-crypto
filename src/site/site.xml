<project xsi:schemaLocation="http://maven.apache.org/DECORATION/1.7.0 http://maven.apache.org/xsd/decoration-1.7.0.xsd" 
         xmlns="http://maven.apache.org/DECORATION/1.7.0" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    name="BH Crypto">
    <bannerLeft>
      <name>BH Crypto</name>
      <href>#</href>
    </bannerLeft>
    <skin>
      <groupId>org.apache.maven.skins</groupId>
      <artifactId>maven-fluido-skin</artifactId>
      <version>1.7</version>
    </skin>
    <custom>
        <fluidoSkin>
            <topBarEnabled>true</topBarEnabled>
            <sideBarEnabled>true</sideBarEnabled>
            <gitHub>
                <projectId>BeeHache/bh-crypto</projectId>
                <ribbonOrientation>right</ribbonOrientation>
                <ribbonColor>black</ribbonColor>
            </gitHub>
        </fluidoSkin>
    </custom>  
    <publishDate position="right"/>
    <version position="right"/>
    <body>
        <head>
            <!-- because the structure is not flat we must use absolute urls -->
            <!--link rel="stylesheet" href="site.css" type="text/css"></link  -->
        </head>
        <menu name="Main">
            <item name="Sitemap" href="sitemap.html" />
            <item name="READ ME" href="${readme.page}" />
            <item name="${license.name}" href="${license.page}"/>
            <item name="API" target="_blank" href="apidocs/index.html" />
        </menu>
        <menu ref="reports"/>
    </body>
</project>
